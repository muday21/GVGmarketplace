# Database Configuration Template
# Copy this file to .env and replace with your actual cPanel database credentials

# Database Configuration
DATABASE_URL="mysql://username:password@host:port/database_name"

# Example for cPanel MySQL database:
# DATABASE_URL="mysql://your_cpanel_user:your_password@your_cpanel_host:3306/your_database_name"

# For SSL connections (recommended for cPanel):
# DATABASE_URL="mysql://username:password@host:port/database_name?sslmode=require"

# Next.js Configuration
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Better Auth Configuration
BETTER_AUTH_SECRET="your-better-auth-secret-here"
BETTER_AUTH_URL="http://localhost:3001"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# For Gmail, use an App Password instead of your regular password
# Generate App Password: https://support.google.com/accounts/answer/185833

